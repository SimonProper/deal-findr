{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "module": "NodeNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "skipLibCheck": true
  }
}
